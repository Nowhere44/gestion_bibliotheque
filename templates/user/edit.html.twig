{% extends 'base.html.twig' %}

{% block header %}{% endblock %}

{% block body %}
<div class="flex justify-center items-center min-h-screen bg-gray-100">
    <div class="w-full max-w-lg p-8 bg-white rounded-lg shadow-md">
        <div class="flex flex-col items-center">
            <img src="{{ user.profileImage }}" alt="Profile Image" class="w-24 h-24 rounded-full object-cover mb-4">
            <h1 class="text-2xl font-bold text-gray-700 mb-6">Modify Your Data</h1>
        </div>

        {{ form_start(form, {'attr': {'class': 'w-full'}}) }}
            <div class="mb-4">
                {{ form_label(form.username, 'Username', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.username, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            </div>

            <!-- Add password and image fields here -->
            <div class="mb-4">
                {{ form_label(form.plainPassword.first, 'New Password', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.plainPassword.second, 'Repeat Password', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.profileImage, 'Profile Image', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.profileImage, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
            </div>

            <div class="flex items-center justify-between">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                    Update Profile
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
