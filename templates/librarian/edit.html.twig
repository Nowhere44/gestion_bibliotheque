{% extends 'base.html.twig' %}

{% block header %}{% endblock %}

{% block title %}Modifier ma bibliothèque{% endblock %}

{% block body %}
<div class="relative isolate overflow-hidden bg-white px-6 py-6 sm:py-32 lg:overflow-visible lg:px-0">
    <div class="absolute inset-0 -z-10 overflow-hidden">
        <!-- SVG background pattern omitted for brevity -->
    </div>
    <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 lg:mx-0 lg:max-w-none lg:grid-cols-2 lg:items-start lg:gap-y-10">
        <!-- Image of the Bibliotheque on the left -->
        <div class="-mt-12 p-12 lg:sticky lg:top-4 lg:col-start-1 lg:row-span-2 lg:row-start-1 lg:overflow-hidden">
            <a href="{{ path('bibliotheque_show', {'id': bibliotheque.id}) }}">
                <img class="w-[48rem] max-w-none rounded-xl bg-gray-900 shadow-xl ring-1 ring-gray-400/10 sm:w-[57rem]" src="{{ bibliotheque.image }}" alt="{{ bibliotheque.name }}">
            </a>
        </div>

        <!-- Form and Bibliotheque details on the right -->
        <div class="lg:col-span-2 lg:col-start-2 lg:row-start-1 lg:mx-auto lg:grid lg:w-full lg:max-w-7xl lg:grid-cols-1 lg:gap-x-8 lg:px-8">
            <div class="lg:pr-4">
                <div class="max-w-xl text-base leading-7 text-gray-700 lg:max-w-lg">
                    <h1 class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">{{bibliotheque.name}}</h1>
                    
                    {{ form_start(form, {'attr': {'class': 'space-y-4 mt-8'}}) }}
                        <div>
                            {{ form_row(form.name, {
                                'attr': {'class': 'w-full p-2 border rounded-md'}
                            }) }}
                        </div>
                        <div>
                            {{ form_row(form.description, {
                                'attr': {'class': 'w-full p-2 border rounded-md'}
                            }) }}
                        </div>
                        <div>
                            {{ form_row(form.image, {
                                'attr': {'class': 'w-full p-2 border rounded-md'}
                            }) }}
                        </div>
                        <div>
                            <label for="{{ form.livres.vars.id }}" class="block text-sm font-medium text-gray-700">Livres</label>
                            <div class="mt-2 border rounded-md shadow-sm">
                                {{ form_widget(form.livres, {
                                    'attr': {'class': 'w-full p-2'}
                                }) }}
                            </div>
                        </div>
                        <div>
                            <button type="submit" class="w-full py-2 px-4 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Mettre à jour</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
