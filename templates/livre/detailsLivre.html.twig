{% extends 'base.html.twig' %}

{% block header %}{% endblock %}


{% block title %}{{ livre.title }}{% endblock %}

{% block body %}

<div class="bg-white">

    <h1 class='text-center text-5xl font-light mt-10 mb-2'>Plus de d√©tails pour ce livre</h1>

    <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:grid lg:max-w-7xl lg:grid-cols-2 lg:gap-x-8 lg:px-8">
      <!-- Product details -->
      <div class="lg:max-w-lg lg:self-end">  
        <div class="mt-4">
          <h1 class="text-2xl font-light tracking-tight text-gray-900 sm:text-4xl">{{livre.title}}</h1>
        </div>
  
        <section aria-labelledby="information-heading" class="mt-4">
          <h2 id="information-heading" class="sr-only">Product information</h2>
    
          <div class="mt-4 space-y-6">
            <p class="text-xl font-light text-blue-600">{{ livre.publishedDate|date('Y-m-d') }}</p>
            <p class="text-base text-gray-500">{{ livre.description }}</p>
        </div>
          </section>
      </div>
  
      <!-- Product image -->
      <div class="mt-10 lg:col-start-2 lg:row-span-2 lg:mt-0 lg:self-center">
        <div class="aspect-h-1 aspect-w-1 overflow-hidden rounded-lg">
          <img src="{{livre.image}}" alt="Model wearing light green backpack with black canvas straps and front zipper pouch." class="h-full w-full object-cover object-center">
        </div>
      </div>
    </div>
  </div>

  {% endblock %}